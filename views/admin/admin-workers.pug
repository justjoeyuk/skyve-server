extends admin-layout

block admin-content
  script(src='/js/admin/workers.js')
  
  table.table
    th
      tr
        th First Name
        th Last Name
    tbody
      each worker in workers
        tr
          td= worker.first_name
          td= worker.last_name
  
  br
  br
  br
    
  #accordian(role="tablist")
    .card
      .card-header(role="tab")#new-worker-tab
        h5.mb-0
          a(data-toggle="collapse" data-parent="#accordian" href="#new-worker") Create A Worker
      #new-worker(role="tabpanel", aria-labelledby="new-worker-tab").collapse
        .card-block
          form#new-worker-form
            .form-group
              label(for="email") Email Address
              input(name="email", type="email", placeholder="Email Address")#email.form-control
            .form-group
              label(for="first_name") First Name
              input(name="first_name", type="text", placeholder="First Name")#first_name.form-control
            .form-group
              label(for="last_name") Last Name
              input(name="last_name", type="text", placeholder="Last Name")#last_name.form-control
            .form-group
              label(for="password") Password
              input(name="pwd", type="password", placeholder="Password")#password.form-control
            button(type="button")#submit-button.btn.btn-primary Submit
